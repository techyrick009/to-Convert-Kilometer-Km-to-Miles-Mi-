#include<stdio.h> 
//#include 

void main() {

  float km;
  float miles;
  

//    clrscr();

	printf(" Program to convert Kilometer to Miles :  ");

	printf("\n\n Enter Length in Kilometer  : ");
	scanf("%f", &km);
    
    miles = (0.621371*km);
    
    printf("\n\n %f Kilometer in Millimeter = %f  \n",km,miles);



//	getch();


}
